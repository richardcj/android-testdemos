<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#ebebeb"
    android:orientation="horizontal" >

    <ImageView
        android:id="@id/iv_function_return"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:contentDescription="@string/des_imageview"
        android:src="@drawable/searchbackbtn" />

    <ImageView
        android:id="@id/iv_function_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/des_imageview"
        android:src="@drawable/righttopbutton" />

    <TextView
        android:id="@id/tv_function_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#949694"
        android:textSize="25sp" />

</RelativeLayout>