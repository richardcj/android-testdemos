<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cj.myteaculture.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar" android:name="com.cj.myteaculture.global.MyApplication">
        <!-- Splash页 -->
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 第一次向导页(activity_guide) -->
        <activity
            android:name=".GuideActivity"
            android:label="@string/title_activity_guide" >
        </activity>
        <!-- 首页 (activity_main)-->
        <activity 
            android:name=".MainActivity" 
            android:label="@string/title_activity_main" >
        </activity>
        <!-- 详细内容页(activity_content) -->
        <activity 
            android:name=".ContentActivity" 
            android:label="@string/title_activity_content" >
        </activity>
        <!-- 分享页(activity_share) -->
        <activity 
            android:name=".ShareActivity" 
            android:label="@string/title_activity_share" >
        </activity>
        <!-- 搜索功能页(activity_function) -->
        <activity 
            android:name=".FunctionActivity" 
            android:label="@string/title_activity_function" >
        </activity>
    </application>

</manifest>